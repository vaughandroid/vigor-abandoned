<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/designer_merged_views">

    <Button
        style="@style/Vigor.Widget.Button.NumberInput"
        android:id="@+id/view_number_input_Button_less"
        android:text="@string/number_input_button_less" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/view_number_input_EditText"
            style="@style/Vigor.Widget.EditText.Number"
            tools:hint="label"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/Vigor.Widget.Button.NumberInput"
        android:id="@+id/view_number_input_Button_more"
        android:text="@string/number_input_button_more" />
</merge>